<!DOCTYPE html>
<html>
<head>
  <title>Omniauth</title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<body>
  <div id="container">
    <div id="logo">
      <div><%= link_to "OmniAuth demo", root_path %></div>
    </div>
    <div id="user_nav">
      <% if current_user %>
      	Welcome <%= current_user.username %> |
        <%= link_to "Edit Profile", edit_user_path(:current) %> |
        <%= link_to "Signout", logout_path %>
      <% else %>
        <%= link_to "Register", new_user_path %> |
        <%= link_to "Signin", login_path %>
      <% end %>
    </div>
    <div class="clear"></div>
    <%- flash.each do |name, msg| -%>
      <%= content_tag :div, msg, :id => "flash_#{name}" %>
    <%- end -%>
    
    <%- if show_title? -%>
      <h3><%=h yield(:title) %></h3>
    <%- end -%>
    
    <%= yield %>
  </div>
</body>
</html>
